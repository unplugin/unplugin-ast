{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "exactOptionalPropertyTypes": true,
    "jsx": "preserve"
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["tests/fixtures"]
}
